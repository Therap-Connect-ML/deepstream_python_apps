{
    "name": "pyds",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
        "args": {
            "BUILDKIT_INLINE_CACHE": "1"
        }
    },
    "runArgs": [
        "-it",
        "--rm",
        "--name=pyds",
        "--gpus=all",
        "--net=host",
        "--privileged=true",
        "--runtime=nvidia"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/opt/nvidia/deepstream/deepstream/sources/deepstream_python_apps,type=bind", 
    "workspaceFolder": "/opt/nvidia/deepstream/deepstream/sources/deepstream_python_apps",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "esbenp.prettier-vscode",
                "ms-python.black-formatter",
                "vscode-icons-team.vscode-icons",
                "GitHub.github-vscode-theme",
                "GitHub.vscode-pull-request-github",
                "ms-python.isort"
            ]
        }
    }
}